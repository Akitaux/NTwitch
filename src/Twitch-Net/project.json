{
    "version": "1.0.0-*",
    "description": "A .Net Core implementation of the https://twitch.tv/ version 3 api.",
    "authors": [ "Auxesis" ],

    "packOptions": {
        "tags": [ "twitch", "twitchtv" ],
        "licenseUrl": "http://opensource.org/licenses/MIT",
        "projectUrl": "https://github.com/Aux/Twitch.Net",
        "repository": {
            "type": "git",
            "url": "git://github.com/Aux/Twitch.Net"
        }
    },

    "configurations": {
        "Release": {
            "buildOptions": {
                "define": [ "RELEASE" ],
                "nowarn": [ "CS1573", "CS1591" ],
                "optimize": true,
                "warningsAsErrors": true,
                "xmlDoc": true
            }
        }
    },

    "dependencies": {
        "NETStandard.Library": "1.6.1",
        "Newtonsoft.Json": "9.0.1"
    },

    "frameworks": {
        "netstandard1.6": {
            "imports": "dnxcore50"
        }
    },

    "scripts": {
        "postcompile": [
            "dotnet pack --no-build --configuration %compile:Configuration%"
        ]
    }
}
