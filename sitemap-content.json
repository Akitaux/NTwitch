---
layout: null
title: "Sitemap with page content"
---
{
  "title": "{{ site.title }}",
  "description": "{{ site.description }}",
  "url": "{{ site.url }}",
  "updated_at": "{{ site.time }}",
  "collections": [{% for collection in site.collections %}
    {
      "name": "{{ collection.label }}",
      "path": "{{ collection.directory }}",
      "pages": [{% for page in site.{{ collection }} %}
        {
          "category": "{{ page.category }}",
          "title": "{{ page.title }}",
          "url": "{{ page.url }}",
          "path": "{{ page.path }}",
          "content": "{{ page.content }}"
        }{% if forloop.last == false %},{% endif %}{% endfor %}]
    }{% if forloop.last == false %},{% endif %}{% endfor %}]
}