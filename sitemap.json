{
  "title": "{{ site.title }}",
  "description": "{{ site.description }}",
  "homepage", "{{ site.url }}",
  "updated_at", "{{ site.time }}",
  "pages": [{% for page in site.pages %}
    {
	  "category": "{{ page.category }}",
      "title": "{{ page.title }}",
      "url": "{{ page.url }}",
	  "path": "{{ page.path }}",
	  "content": "{{ page.excerpt }}"
    }{% if forloop.last == false %},{% endif %}
{% endfor %}  ]
}